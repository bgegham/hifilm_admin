extends ../layouts/error_layout

block content
    style.
        body{
            padding: 0!important;
            background: #f5ebeb;
        }
        .page-not-found {
            text-align: center;
        }
        .img-container {
            z-index: -1;
            width: 100%;
            height: 235px;
            margin: 0 auto;
            overflow: hidden;
            bottom: 0;
            position: absolute;
        }
        .image404 {
            position: absolute;
            bottom: 0;
            left: 50%;
            margin-left: -307px;
        }
        .page-not-found h1 {
            font-size: 22px;
            margin: 0 auto 20px auto;
        }

        .page-not-found h2 {
            font-size: 30px;
            margin: 0 auto 20px auto;
        }
        .link {
            outline: none;
            text-decoration: none;
            position: relative;
            font-size: 7em;
            line-height: 1;
            color: #9e9ba4;
            display: inline-block;
        }
        /* Kukuri */
        .link--kukuri {
            font-weight: 900;
            overflow: hidden;
            line-height: 1;
            color: #c5c2b8;
        }

        .link--kukuri:hover {
            color: #f5ebeb;
        }

        .link--kukuri::after {
            content: '';
            position: absolute;
            height: 16px;
            width: 100%;
            top: 50%;
            margin-top: -8px;
            right: 0;
            background: #F9F9F9;
            -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
            -webkit-transition: -webkit-transform 0.4s;
            transition: transform 0.4s;
            -webkit-transition-timing-function: cubic-bezier(0.7, 0, 0.3, 1);
            transition-timing-function: cubic-bezier(0.7, 0, 0.3, 1);
        }

        .link--kukuri:hover::after {
            -webkit-transform: translate3d(100%, 0, 0);
            transform: translate3d(100%, 0, 0);
        }

        .link--kukuri::before {
            content: attr(data-letters);
            position: absolute;
            z-index: 2;
            overflow: hidden;
            color: #424242;
            white-space: nowrap;
            width: 0%;
            -webkit-transition: width 0.4s 0.3s;
            transition: width 0.4s 0.3s;
        }

        .link--kukuri:hover::before {
            width: 100%;
        }
        .main-page{
            background: #c5c2b8;
            color: #ffffff;
            cursor: pointer;
            display: inline-block;
            padding: 1.4em 1.6em;
            border-radius: 50em;
            font-size: 1.4rem;
            font-weight: bold;
            box-shadow: 0 6px 1px rgba(0, 0, 0, 0.1);
        }
    section(style="padding:0")
        .container
            .row
                .page-not-found
                    h1
                        a.link.link--kukuri(data-letters="404") o_O
                    h2 PAGE NOT FOUND
        .img-container
            img.image404(src="/img/404.png")